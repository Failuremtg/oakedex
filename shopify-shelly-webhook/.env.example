# Shopify (from Shopify Admin → Settings → Notifications → Webhooks, or Apps → Develop apps → Your app → API credentials)
SHOPIFY_WEBHOOK_SECRET=your_shopify_api_secret

# Shelly Cloud (from https://home.shelly.cloud → User → Authorization cloud key + Server URI)
# Device IDs from each device's settings in Shelly Cloud
SHELLY_AUTH_KEY=your_shelly_auth_key
SHELLY_SERVER_URI=your_shelly_server_uri
SHELLY_DEVICE_ID_LIGHT=your_light_plug_device_id
SHELLY_DEVICE_ID_DISCO=your_disco_ball_plug_device_id
